{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}

    <style>
        label {
            display: inline-block;
            margin-bottom: 0;
        }
    </style>

    <div>
        {{ form_start(form) }}

        <table class="table table-borderless table-sm mb-3" style="margin: auto; width: 82%;">
            <tr>
                <td style="vertical-align: middle;">
                    {{ form_label(form.debut) }}
                </td>
                <td>
                    {{ form_widget(form.debut) }}
                    {{ form_errors(form.debut) }}
                </td>
                <td>&nbsp;</td>

                <td style="vertical-align: middle;">
                    {{ form_label(form.fin) }}
                </td>
                <td>
                    {{ form_widget(form.fin) }}
                    {{ form_errors(form.fin) }}
                </td>
                <td>&nbsp;</td>

                <td style="vertical-align: middle;">
                    {{ form_label(form.user) }}
                </td>
                <td>
                    {{ form_widget(form.user) }}
                    {{ form_errors(form.user) }}
                </td>
                <td>&nbsp;</td>

                <td>
                    <button class="btn btn-primary">Rechercher</button>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
    </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Date</th>
                <th>Libell√©</th>
                <th>Utilisateur</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logs %}
                <tr>
                    <td>
                        {% if log.createAt %}
                            {{ log.createAt|date('d-m-Y H:i') }}
                        {% endif %}
                    </td>

                    <td>{{ log.type }}
                        {{ log.libelle }}</td>
                    <td>{{ log.user.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#log_index").addClass("active");
        });
    </script>
{% endblock %}
