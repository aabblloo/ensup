{% extends 'base.html.twig' %}

{% block body %}
    <h1>Log</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ log.type }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ log.libelle }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ log.login }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{% if log.createAt %}{{ log.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('logs_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('logs_edit', { 'id': log.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
