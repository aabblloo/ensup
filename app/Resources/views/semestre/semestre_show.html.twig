{% extends 'base.html.twig' %}

{% block title %}
    Fiche du semestre
{% endblock %}

{% block titre %}
    <span>
        <a href="{{ path('departement_show', {'id': semestre.cycle.specialite.departement.id}) }}" class="text-success">
        {{ semestre.cycle.specialite.departement.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>

    <span>
        <a href="{{ path('specialite_show', {'id': semestre.cycle.specialite.id}) }}" class="text-info">
        {{ semestre.cycle.specialite.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>

    <span>
        <a href="{{ path('specialite_show', {'id': semestre.cycle.specialite.id, 'cycle_id': semestre.cycle.id}) }}" class="text-primary">
        {{ semestre.cycle.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>

    <a href="{{ path('semestre_show', {'id': semestre.id}) }}" class="text-secondary">
        Fiche du semestre
    </a>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-5">
            <table class="table table-borderless table-hover table-sm">
                <tr>
                    <th style="width: 40%">Code</th>
                    <td class="value">{{ semestre.code }}</td>
                </tr>

                <tr>
                    <th>Nom</th>
                    <td class="value">{{ semestre.nom }}</td>
                </tr>

                <tr>
                    <th>Ordre</th>
                    <td class="value">{{ semestre.ordre }}</td>
                </tr>

            </table>
        </div>
    </div>

    <h5 class="mt-3">Liste des unités d'enseignement</h5>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Crédit</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for ue in semestre.ues %}
            <tr>
                <td>{{ ue.code }}</td>
                <td>{{ ue.nom }}</td>
                <td>{{ ue.credit }}</td>
                <td class="text-right">
                    <a href="{{ path('ue_edit', {'id': ue.id}) }}" class="btn btn-link py-0" title="Editer">
                        <i class="fa fa-edit"></i>
                    </a>

                    <a href="{{ path('ue_delete', {'id': ue.id}) }}" class="btn btn-link py-0 text-danger" title="Supprimer">
                        <i class="fa fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#departement_index").addClass("active");
        });
    </script>
{% endblock %}
