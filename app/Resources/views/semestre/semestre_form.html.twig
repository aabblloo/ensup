{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    <span>
        <a href="{{ path('departement_show', {'id': semestre.cycle.specialite.departement.id}) }}" class="text-success">
        {{ semestre.cycle.specialite.departement.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>

    <span>
        <a href="{{ path('specialite_show', {'id': semestre.cycle.specialite.id}) }}" class="text-info">
        {{ semestre.cycle.specialite.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>

    <span>
        <a href="{{ path('cycle_show', {'id': semestre.cycle.id}) }}" class="text-primary">
        {{ semestre.cycle.nom }}
        </a>
    </span>
    <span class="font-weight-normal">/</span>
    {{ titre }}
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-4">
            <table class="table table-borderless table-hover table-sm">
                <tr>
                    <td style="width: 40%"></td>
                    <td></td>
                </tr>

                {{ form_row(form.code) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.ordre) }}

                <tr>
                    <td></td>
                    <td>
                        <button class="btn btn-primary btn-sm">
                            <i class="fa fa-save"></i>
                            Enregistrer
                        </button>

                        {% set lien = path('specialite_show', {'id': semestre.cycle.specialite.id}) %}

                        <a href="{{ lien }}" class="btn btn-primary btn-sm">
                            <i class="fa fa-arrow-left"></i>
                            Annuler
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('chosen/chosen.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.min.js') }}"></script>

    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#module_index").attr("class");
            $("#module_index").attr("class", attr + " active");

            $(".chosen-select").chosen(
                {
                    allow_single_deselect: true,
                    no_results_text: "Option non trouv√©e !",
                    //width: "100%",
                }
            );

        });
    </script>
{% endblock %}
