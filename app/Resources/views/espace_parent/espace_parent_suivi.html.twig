{% extends 'base_print.html.twig' %}

{% block title %}Parent Etudiant suivi{% endblock %}

{% block body %}
    <h3 class="mb-3">
        Suivi des activités de : <span class="text-danger">{{ etutiant.prenomNom }}</span>
    </h3>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Observation</th>
            </tr>
        </thead>
        <tbody class="text-monospace">
            {% for suivi in suivis %}
                <tr>
                    <td>{{ suivi.date | dateFr }}</td>
                    <td>{{ suivi.observation }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <p class="text-center"><small>Imprimé le : {{ ''|date('d-m-Y à H:i') }}</small></p>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#espace_parent_index").addClass("active");
        });
    </script>
{% endblock %}