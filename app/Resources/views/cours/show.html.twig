{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cour</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if cour.date %}{{ cour.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{% if cour.debut %}{{ cour.debut|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{% if cour.fin %}{{ cour.fin|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nbreheure</th>
                <td>{{ cour.nbreHeure }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cours_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cours_edit', { 'id': cour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
