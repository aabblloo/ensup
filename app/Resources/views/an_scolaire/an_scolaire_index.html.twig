{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb_ mb-3">
        <a class="btn btn-link" href="{{ path('an_scolaire_new') }}">
            <i class="fa fa-sm_ fa-calendar-alt"></i>
            Ajouter une année académique
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Libellé</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="value">
            {% for an_scolaire in an_scolaires %}
                <tr>
                    <td>{{ an_scolaire.nom }}</td>
                    <td class="text-right">
                        <a href="{{ path('an_scolaire_edit', {'id': an_scolaire.id}) }}" class="btn btn-link py-0" title="Modifier">
                            <i class="fa fa-sm_ fa-edit"></i>                            
                        </a>

                        <a href="{{ path('an_scolaire_delete', {'id': an_scolaire.id}) }}" class="btn btn-link py-0 text-danger" title="Supprimer">
                            <i class="fa fa-sm_ fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <caption>Pas d'enregistrement</caption>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#an_scolaire_index").attr("class");
            $("#an_scolaire_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}
