{% extends 'base.html.twig' %}
{% set titre='Liste des filières' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb_">
        <a class="btn btn-link" href="{{ path('filiere_new') }}">
            <i class="fa fa-sm fa-chalkboard-teacher"></i>
            Enregistrer une filière
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="value">
        {% for filiere in filieres %}
            <tr>
                <td>{{ filiere.code }}</td>
                <td>{{ filiere.nom }}</td>
                <td>
                    <a href="{{ path('filiere_edit', {'id': filiere.id}) }}"
                       title="Modifier">
                        <i class="fa fa-sm fa-edit"></i>
                    </a>
                    <a href="{{ path('filiere_delete', {'id': filiere.id}) }}"
                       title="Supprimer">
                        <i class="fa fa-sm fa-trash-alt text-danger"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <caption>Pas d'enregistrement</caption>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#filiere_index").attr("class");
            $("#filiere_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}
