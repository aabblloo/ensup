{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb_">
        <a class="btn btn-link" href="{{ path('banque_new') }}">
            <i class="fa fa-building fa-sm"></i>
            Enregistrer une banque
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="value">
            {% for banque in banques %}
                <tr>
                    <td>{{ banque.nom }}</td>
                    <td>{{ banque.code }}</td>
                    <td>
                        <a href="{{ path('banque_edit', {'id': banque.id}) }}" title="Modifier">
                            <i class="fa fa-edit fa-sm"></i>
                        </a>
                        <a href="{{ path('banque_delete', {'id': banque.id}) }}" title="Supprimer">
                            <i class="fa fa-trash-alt text-danger fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <caption>Pas d'enregistrement</caption>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#banque_index").attr("class");
            $("#banque_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}