{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <p>
        <a class="btn btn-link" href="{{ path('prof_new') }}">
            <i class="fas fa-user-astronaut"></i>
            Ajouter un professeur
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Spécialité</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="value">
        {% for prof in professeurs %}
            <tr>
                <td>{{ prof.prenom }}</td>
                <td>{{ prof.nom }}</td>
                <td>{{ prof.specialite }}</td>
                <td>{{ prof.telephone }}</td>
                <td>{{ prof.email }}</td>
                <td class="text-right">
                    <a href="{{ path('prof_show', {'id': prof.id}) }}" class="btn btn-link py-0" title="Afficher">
                        <i class="fas fa-file-alt"></i>
                    </a>
                    <a href="{{ path('prof_edit', {'id': prof.id}) }}" class="btn btn-link py-0" title="Editer">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path('prof_delete', {'id': prof.id}) }}" class="btn btn-link py-0" title="Supprimer">
                        <i class="fas fa-trash-alt text-danger"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <caption>Pas d'enregistrement</caption>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $('#autre').attr('class');
            $('#autre').attr('class', attr + ' active');
            var attr = $('#prof_index').attr('class');
            $('#prof_index').attr('class', attr + ' active');
        });
    </script>
{% endblock %}
