{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <h4 class="text-danger">Voulez-vous supprimer l'utilisateur suivant ?</h4>

    {{ form_start(form, {'attr':{'id':'delete_form'}}) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-5">
            <table class="table table-sm table-borderless table-hover">
                <tbody>
                    <tr>
                        <th style="width: 40%">Nom</th>
                        <td class="value">{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Login</th>
                        <td class="value">{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td class="value">{{ user.email }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <button type="button" id="delete_btn" class="btn btn-danger btn-sm">
                                <i class="fa fa-sm fa-trash-alt"></i>
                                Supprimer
                            </button>
                            <a href="{{ path('user_index') }}" class="btn btn-sm btn-success">
                                <i class="fa fa-sm fa-arrow-left"></i>
                                Annuler
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#user_index").attr("class");
            $("#user_index").attr("class", attr + " active");

            $('#delete_btn').click(function () {
                if (confirm('Voulez-vous supprimer cet utilisateur ?')) {
                    $('#delete_form').submit();
                }
            });

        });
    </script>
{% endblock %}
