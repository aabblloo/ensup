                <td>{{ etudiant.prenomNom }}</td>

                <td class="text-right"></td>

                <td class="text-right"></td>

                {#<td class="text-right"></td>#}

                {#<td class="text-right"></td>#}

                {#<td class="text-right"></td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
