        <div class="col-md-6">
            <table class="table table-borderless table-hover table-sm_">
                <tbody>
                <tr style="width: 40%;">
                    <th>Evaluation</th>
                    <td class="value">
                        {{ ue.semestre.nom }}
                        {{ anScolaire.nom }}
                    </td>
                </tr>
                <tr>
                    <th>Niveau d'étude</th>
                    <td class="value">{{ ue.classe.nom }}</td>
                </tr>

                <tr>
                    <th>UE</th>
                    <td class="value">{{ ue.nom }}</td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Etudiant</th>
            <th>Note de classe</th>
            <th>Note Examen</th>
