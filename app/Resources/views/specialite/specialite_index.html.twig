{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb_ mb-3">
        <a class="btn btn-link" href="{{ path('specialite_new') }}">
            <i class="fa fa-sm_ fa-chalkboard-teacher"></i>
            Enregistrer une spécialité
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Département</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="value">
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.code|upper }}</td>
                <td>{{ specialite.nom }}</td>
                <td>{{ specialite.departement.nom }}</td>

                <td class="text-right">
                    <a href="{{ path('specialite_edit', {'id': specialite.id}) }}" class="btn btn-link py-0"
                       title="Modifier">
                        <i class="fa fa-sm_ fa-edit"></i>
                    </a>

                    <a href="{{ path('specialite_delete', {'id': specialite.id}) }}" class="btn btn-link py-0 text-danger"
                       title="Supprimer">
                        <i class="fa fa-sm_ fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <caption>
                Pas d'enregistrement
            </caption>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#specialite_index").attr("class");
            $("#specialite_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}
