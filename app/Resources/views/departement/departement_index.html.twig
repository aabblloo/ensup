{% extends 'base.html.twig' %}

{% block title %}
    Liste des départements
{% endblock %}

{% block titre %}
    Liste des départements
{% endblock %}

{% block body %}
    <div class="breadcrumb_ mb-3">
        <a class="btn btn-link" href="{{ path('departement_new') }}">
            <i class="fa fa-school"></i>
            Enregistrer un département
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            {# <th></th> #}
        </tr>
        </thead>
        <tbody class="value">
        {% for departement in departements %}
            <tr>
                <td>{{ departement.code }}</td>

                <td>
                    <a href="{{ path('departement_show', {'id': departement.id}) }}" title="Afficher">
                        {{ departement.nom }}
                    </a>
                </td>

                {#<td class="text-right">
                    <a href="{{ path('departement_edit', {'id': departement.id}) }}" class="btn btn-link py-0"
                       title="Modifier">
                        <i class="fa fa-sm_ fa-edit"></i>
                    </a>
                    <a href="{{ path('departement_delete', {'id': departement.id}) }}"
                       class="btn btn-link py-0 text-danger"
                       title="Supprimer">
                        <i class="fa fa-sm_ fa-trash-alt"></i>
                    </a>
                </td>#}
            </tr>
        {% else %}
            <caption>Pas d'enregistrement</caption>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#departement_index").attr("class");
            $("#departement_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}
