{% extends 'base.html.twig' %}

{% block title %}
    Supprimer le département
{% endblock %}

{% block titre %}
    Supprimer le département
{% endblock %}

{% block body %}
    <h4 class="text-danger">Voulez-vous supprimer le département suivant ?</h4>

    {{ form_start(form, {'attr':{'id':'delete_form'}}) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-4">
            <table class="table table-borderless table-hover">
                <tr>
                    <th style="width: 40%">Code</th>
                    <td class="value">{{ departement.code }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td class="value">{{ departement.nom }}</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="button" id="delete_btn" class="btn btn-danger btn-sm">
                            <i class="fa fa-sm fa-trash-alt"></i>
                            Supprimer
                        </button>
                        <a href="{{ path('departement_show', {'id': departement.id}) }}" class="btn btn-sm btn-success">
                            <i class="fa fa-sm fa-arrow-left"></i>
                            Annuler
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#departement_index").attr("class");
            $("#departement_index").attr("class", attr + " active");

            $("#delete_btn").click(function () {
                if (confirm("Voulez-vous supprimer cette filière ?")) {
                    $("#delete_form").submit();
                }
            });
        });
    </script>
{% endblock %}
