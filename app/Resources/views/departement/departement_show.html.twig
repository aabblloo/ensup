{% extends 'base.html.twig' %}

{% block title %}
    Fiche du département
{% endblock %}

{% block titre %}
    Fiche du département
{% endblock %}

{% block body %}

    <p>
        <a href="{{ path('departement_edit', {'id': departement.id}) }}" class="btn btn-link">
            <i class="fas fa-edit"></i>
            Editer
        </a>

        <a href="{{ path('departement_delete', {'id': departement.id}) }}" class="btn btn-link text-danger">
            <i class="fas fa-trash-alt"></i>
            Supprimer
        </a>

        <a href="{{ path('section_new', {'id': departement.id}) }}" class="btn btn-link">
            <i class="fas fa-calendar"></i>
            Ajouter une section
        </a>
    </p>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-borderless table-hover">
                {# <tr>
                    <th style="width: 20%">Code</th>
                    <td class="value">{{ departement.code }}</td>
                </tr> #}

                <tr>
                    <th>
                        <h5>Nom DER</h5>
                    </th>
                    <td class="value">
                        <h5>{{ departement.nom }}</h5>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <h5 class="mt-3">Liste des sections</h5>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            {#<th style="width: 30%">Code</th>#}
            <th>Nom</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="value">
        {% for section in departement.sections %}
            <tr>
               {# <td>{{ section.code }}</td>#}
                <td>
                    <a href="{{ path('section_show', {'id': section.id}) }}" title="Afficher">
                        {{ section.nom }}
                    </a>
                </td>

                <td class="text-right">
                    <a href="{{ path('section_edit', {'id': section.id}) }}" class="btn btn-link py-0"
                       title="Editer">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path('section_delete', {'id': section.id}) }}"
                       class="btn btn-link py-0 text-danger"
                       title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#departement_index").addClass("active");
        });
    </script>
{% endblock %}
