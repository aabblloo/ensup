{% extends 'base.html.twig' %}

{% block title %}
    Fiche section
{% endblock %}

{% block titre %}
    <a href="{{ path('departement_show', {'id': section.departement.id}) }}" class="text-success">
        {{ section.departement.nom }}
    </a>
    <span class="font-weight-normal">/</span>
    Fiche section
{% endblock %}

{% block body %}

    <p>
        <a href="{{ path('section_edit', {'id': section.id}) }}" class="btn btn-link">
            <i class="fas fa-edit"></i>
            Editer
        </a>

        <a href="{{ path('section_delete', {'id': section.id}) }}" class="btn btn-link text-danger">
            <i class="fas fa-trash-alt"></i>
            Supprimer
        </a>

        <a href="{{ path('specialite_new', {'id': section.id}) }}" class="btn btn-link">
            <i class="fas fa-calendar"></i>
            Ajouter une spécialité
        </a>
    </p>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-borderless table-hover">
                {#<tr>
                    <th style="width: 20%">Code</th>
                    <td>{{ section.code }}</td>
                </tr>#}
                <tr>
                    <th>
                        <h5>Nom section</h5>
                    </th>
                    <th>
                        <h5>{{ section.nom }}</h5>
                    </th>
                </tr>
            </table>
        </div>
    </div>

    <h5>Liste des spécialités</h5>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            {#<th style="width: 30%">Code</th>#}
            <th>Nom</th>
            {# <th></th> #}
        </tr>
        </thead>
        <tbody class="value">
        {% for specialite in section.specialites %}
            <tr>
                {#<td>{{ specialite.code }}</td>#}
                <td>
                    <a href="{{ path('specialite_show', {'id': specialite.id}) }}" title="Afficher">
                        {{ specialite.nom }}
                    </a>
                </td>

                {# <td class="text-right">
                            <a href="{{ path('specialite_edit', {'id': specialite.id}) }}" class="btn btn-link py-0"
                               title="Editer">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('specialite_delete', {'id': specialite.id}) }}"
                               class="btn btn-link py-0 text-danger"
                               title="Supprimer">
                                <i class="fa fa-trash-alt"></i>
                            </a>
                        </td> #}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#section_index").addClass("active");
        });
    </script>
{% endblock %}
