{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    <a href="{{ path('departement_show', {'id': section.departement.id}) }}" class="text-success">
        {{ section.departement.nom }}
    </a>
    <span class="font-weight-normal">/</span>
    {{ titre }}
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-borderless table-hover">
                <tr>
                    <td style="width: 20%"></td>
                    <td></td>
                </tr>
                {# {{ form_row(form.code) }} #}
                {{ form_row(form.nom) }}
                {# {{ form_row(form.departement) }} #}
                <tr>
                    <td></td>
                    <td>
                        <button class="btn btn-primary btn-sm">
                            <i class="fa fa-save"></i>
                            Enregistrer
                        </button>

                        <a href="{{ path('departement_show', {'id': section.departement.id}) }}"
                           class="btn btn-primary btn-sm">
                            <i class="fa fa-arrow-left"></i>
                            Annuler
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('chosen/chosen.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.min.js') }}"></script>

    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#section_index").attr("class");
            $("#section_index").attr("class", attr + " active");

            $(".chosen-select").chosen(
                {
                    allow_single_deselect: true,
                    no_results_text: "Option non trouv√©e !",
                    //width: "100%",
                }
            );

        });
    </script>
{% endblock %}
