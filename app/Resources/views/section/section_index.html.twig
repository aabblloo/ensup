{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    <span class="text-success">{{ departement.nom }}</span> : {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb_ mb-3">
        <a class="btn btn-link" href="">
            <i class="fa fa-sm_ fa-chalkboard-teacher"></i>
            Enregistrer une section
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>DÃ©partement</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="value">
        {% for section in sections %}
            <tr>
                <td>{{ section.code|upper }}</td>
                <td>{{ section.nom }}</td>
                <td>{{ section.departement.nom }}</td>

                <td class="text-right">
                    <a href="{{ path('section_edit', {'id': section.id}) }}" class="btn btn-link py-0"
                       title="Modifier">
                        <i class="fa fa-sm_ fa-edit"></i>
                    </a>

                    <a href="{{ path('section_delete', {'id': section.id}) }}" class="btn btn-link py-0 text-danger"
                       title="Supprimer">
                        <i class="fa fa-sm_ fa-trash-alt text-danger"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <caption>
                Pas d'enregistrement
            </caption>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#section_index").attr("class");
            $("#section_index").attr("class", attr + " active");
        });
    </script>
{% endblock %}
